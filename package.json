{
  "name": "@tps/planning-suite-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "kits/*",
    "shared/*"
  ],
  "scripts": {
    "clean": "git clean -ffdx",
    "clean:aragon": "rm -rf ~/.aragon && rm -rf ~/.ipfs",
    "clean:build": "git clean -ffdx --exclude=node_modules/",
    "coverage": "lerna run coverage --no-bail",
    "coveralls": "cat apps/*/coverage/lcov.info | coveralls",
    "cypress": "CYPRESS=true apps/shared/test-helpers/ganache-cli.sh",
    "cypress:open": "cypress open",
    "cypress:run": "wait-on http://localhost:3000/#/0x5b6a3301a67A4bfda9D3a528CaD34cac6e7F8070 && cypress run",
    "dev": "apps/shared/test-helpers/develop-kit.sh",
    "dev:address": "cd apps/address-book && yarn dev",
    "dev:allocations": "cd apps/allocations && yarn dev",
    "dev:projects": "cd apps/projects && yarn dev",
    "dev:range": "cd apps/range-voting && yarn dev",
    "dev:rewards": "cd apps/rewards && yarn dev",
    "devchain": "aragon devchain",
    "devchain:reset": "aragon devchain --reset",
    "publish:apps": "lerna run publish",
    "publish:http": "lerna run publish:http",
    "restart": "RESTART_KIT=true apps/shared/test-helpers/ganache-cli.sh",
    "start": "START_KIT=true apps/shared/test-helpers/ganache-cli.sh",
    "start:dev": "DEV=true apps/shared/test-helpers/ganache-cli.sh",
    "start:kit": "cd apps/planning-suite-kit && yarn start:kit",
    "start:address": "cd apps/address-book && yarn start",
    "start:allocations": "cd apps/allocations && yarn start",
    "start:projects": "cd apps/projects && yarn start",
    "start:range": "cd apps/range-voting && yarn start",
    "test": "lerna run test --no-bail",
    "test:gas": "lerna run test:gas",
    "test:address": "cd apps/address-book && npm test",
    "test:allocations": "cd apps/allocations && npm test",
    "test:projects": "cd apps/projects && npm test",
    "test:range": "cd apps/range-voting && npm test",
    "test:rewards": "cd apps/rewards && npm test",
    "lint": "lerna run lint --no-bail && lerna exec --scope=@tps/apps-* --stream -- eslint app",
    "lint:fix": "lerna exec --scope=@tps/apps-* --stream -- eslint app --fix",
    "lint:address": "cd apps/address-book && yarn lint",
    "lint:allocations": "cd apps/allocations && yarn lint",
    "lint:projects": "cd apps/projects && yarn lint",
    "lint:range": "cd apps/range-voting && yarn lint"
  },
  "devDependencies": {
    "@aragon/cli": "5.5.0",
    "coveralls": "3.0.3",
    "cypress": "^3.2.0",
    "lerna": "^3.13.1",
    "truffle-privatekey-provider": "^1.1.0",
    "wait-on": "^3.2.0"
  }
}
