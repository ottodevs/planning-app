{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "prettier/react",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "react/no-typos": 1,
    "semi": ["error", "never"],
    "react-hooks/rules-of-hooks": "error"
  }
}
