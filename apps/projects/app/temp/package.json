{
  "name": "@tps/apps-projects",
  "version": "0.0.1",
  "description": "Project management app from Planning Suite",
  "scripts": {
    "build:app": "parcel build app/index.html -d dist/ --public-url '.'",
    "build:script": "parcel build app/script.js -d dist/",
    "build": "npm run compile && npm run sync-assets && npm run build:app && npm run build:script",
    "compile": "truffle compile",
    "console": "truffle dev",
    "coverage": "SOLIDITY_COVERAGE=true npm run ganache-cli:test",
    "dev": "npm run sync-assets && parcel app/index.html --port 3333",
    "ganache-cli:test": "../shared/test-helpers/ganache-cli.sh",
    "lint": "solium --dir ./contracts",
    "prepublishOnly": "truffle compile --all",
    "publish:http": "npm run publish:http-copy-files && aragon apm publish patch --http localhost:3333 --http-served-from ./dist",
    "publish:http-copy-files": "npm run build:script && mkdir -p dist/images && cp images/icon.svg dist/images/",
    "publish": "aragon apm publish patch && sleep 3",
    "publish:major": "aragon apm publish major",
    "deploy:rinkeby": "npm run publish:major -- --environment staging",
    "start": "aragon run",
    "sync-assets": "copy-aragon-ui-assets ./dist",
    "test:gas": "GAS_REPORTER=true npm test",
    "test": "TRUFFLE_TEST=true npm run ganache-cli:test"
  },
  "dependencies": {
    "@aragon/client": "1.1.0",
    "@aragon/ui": "0.30.1",
    "apollo-boost": "^0.1.27",
    "apollo-client": "^2.4.12",
    "apollo-link-context": "^1.0.14",
    "graphql": "^14.1.1",
    "graphql-request": "^1.8.2",
    "graphql-tag": "^2.10.1",
    "prop-types": "15.6.2",
    "react": "^16.8.1",
    "react-apollo": "^2.4.1",
    "react-apollo-hooks": "^0.3.1",
    "react-dom": "^16.8.1",
    "react-number-format": "4.0.6",
    "react-spring": "8.0.5",
    "rxjs": "6.4.0",
    "rxjs-compat": "6.4.0",
    "styled-components": "4.1.3"
  },
  "devDependencies": {
    "@tps/test-helpers": "^0.0.1",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-transform-react-jsx-source": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "babel-plugin-styled-components": "1.10.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "eslint": "5.5.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-react": "7.12.4",
    "parcel-bundler": "1.11.0",
    "prettier": "1.16.4",
    "react-hot-loader": "4.6.5",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.5.2"
  },
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/spacedecentral/planning-suite"
  },
  "keywords": [],
  "license": "GPL-3.0"
}
