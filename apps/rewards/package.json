{
  "name": "@tps/apps-rewards",
  "version": "0.0.1",
  "description": "Rewards app from Planning Suite",
  "scripts": {
    "build:app": "parcel build app/index.html -d dist/ --public-url '.'",
    "build:script": "parcel build app/script.js -d dist/",
    "build": "yarn compile && yarn sync-assets && yarn build:app && yarn build:script",
    "compile": "truffle compile",
    "console": "truffle dev",
    "coverage": "SOLIDITY_COVERAGE=true yarn ganache-cli:test",
    "dev": "yarn sync-assets && parcel app/index.html --port 5555",
    "ganache-cli:test": "../shared/test-helpers/ganache-cli.sh",
    "lint": "solium --dir ./contracts",
    "prepublishOnly": "truffle compile --all",
    "publish:http": "yarn publish:http-copy-files && aragon apm publish patch --http localhost:5555 --http-served-from ./dist",
    "publish:http-copy-files": "yarn build:script && mkdir -p dist/images && cp images/icon.svg dist/images/",
    "publish": "aragon apm publish patch && sleep 3",
    "publish:major": "aragon apm publish major",
    "deploy:rinkeby": "yarn publish:major -- --environment staging",
    "start": "aragon run",
    "sync-assets": "copy-aragon-ui-assets ./dist",
    "test:gas": "GAS_REPORTER=true npm test",
    "test": "TRUFFLE_TEST=true yarn ganache-cli:test"
  },
  "dependencies": {
    "@aragon/api": "^1.0.0-beta.1",
    "@aragon/api-react": "^1.0.0-beta.1",
    "@aragon/ui": "0.32.0",
    "@babel/polyfill": "^7.4.0",
    "@tps/apps-address-book": "^0.0.1",
    "@tps/ui": "^0.0.1",
    "bignumber.js": "^8.1.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.5",
    "react-blockies": "^1.4.1",
    "react-dom": "^16.8.5",
    "rxjs": "^6.4.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@tps/test-helpers": "^0.0.1",
    "@tps/eslint-config": "^0.0.1",
    "@tps/solium-config": "^0.0.1",
    "@tps/babel-preset": "^0.0.1",
    "ethlint": "^1.2.3",
    "eslint": "^5.15.3",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.16.4",
    "react-hot-loader": "^4.8.0",
    "stylelint": "^9.10.1"
  },
  "author": "Autark LLC <autark.xyz>",
  "repository": {
    "type": "git",
    "url": "https://github.com/AutarkLabs/planning-suite"
  },
  "keywords": [],
  "license": "GPL-3.0",
  "babel": {
    "presets": "@tps",
    "plugins": "react-hot-loader/babel"
  },
  "eslintConfig": {
    "extends": "@tps"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "stylelint": {
    "extends": "@tps/eslint-config/stylelint"
  }
}
